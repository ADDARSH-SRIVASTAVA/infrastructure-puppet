###########################################################################


use_bayes 		0
#use_auto_whitelist 	0
required_hits 		10
lock_method 		flock
skip_rbl_checks 	0
#check_mx_attempts 	0
report_safe 		1
use_pyzor 		0
use_razor2 		0
dns_available 		yes
remove_header 		all Report

<% if @trusted_networks %>
trusted_networks <%= @trusted_networks %>
<% end %>

<% @whitelist_from.each do |val| -%>
whitelist_from <%= val %>
<% end -%>
<% @blacklist_from.each do |val| -%>
blacklist_from <%= val %>
<% end -%>


# Custom Scoring

<% if @custom_score %>
<% custom_score.names.sort.each do |name, score| -%>
score <%= name %> 		<%= score %>
<% end -%>
<% end %>




