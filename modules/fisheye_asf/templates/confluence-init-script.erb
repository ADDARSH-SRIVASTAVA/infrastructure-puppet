#!/bin/sh

RUN_AS_USER=<%= @username %>
FISHEYE_INSTALL=<%= @current_dir %>

start() {
        echo "Starting Fisheye: "
        umask 002
        if [ "x$USER" != "x$RUN_AS_USER" ]; then
          su - $RUN_AS_USER -c "cd $FISHEYE_INSTALL/bin && ./startup.sh"
        else
          $FISHEYE_INSTALL/bin/start.sh
        fi
        echo "done."
}
stop() {
        echo "Shutting down Fisheye: "
        if [ "x$USER" != "x$RUN_AS_USER" ]; then
          su - $RUN_AS_USER -c "cd $FISHEYE_INSTALL/bin && ./shutdown.sh"
        else
          $FISHEYE_INSTALL/bin/stop.sh
        fi
        echo "done."
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 8
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0

